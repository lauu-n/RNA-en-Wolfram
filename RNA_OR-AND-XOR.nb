(* Función escalón *)
stepFunction[x_?NumericQ] := If[x > 0, 1, 0]


(* COMPUERTA AND *)
perceptronAND[{x1_, x2_}] := stepFunction[x1*1 + x2*1 - 1.5]

testInputs = {{0, 0}, {0, 1}, {1, 0}, {1, 1}};
outputsAND = perceptronAND @@@ testInputs;
Print["Tabla de verdad AND: ", Thread[testInputs -> outputsAND]];


(* COMPUERTA OR *)
perceptronOR[{x1_, x2_}] := stepFunction[x1*1 + x2*1 - 0.5]

outputsOR = perceptronOR @@@ testInputs;
Print["Tabla de verdad OR: ", Thread[testInputs -> outputsOR]];


(* COMPUERTA XOR ----------------- *)
perceptronNAND[{x1_, x2_}] := stepFunction[-x1*1 - x2*1 + 1.5]

perceptronXOR[{x1_, x2_}] := Module[
  {h1, h2},
  h1 = perceptronOR[{x1, x2}];
  h2 = perceptronNAND[{x1, x2}];
  perceptronAND[{h1, h2}]
]

outputsXOR = perceptronXOR @@@ testInputs;
Print["Tabla de verdad XOR: ", Thread[testInputs -> outputsXOR]];
